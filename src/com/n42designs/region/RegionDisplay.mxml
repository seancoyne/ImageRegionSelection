<?xml version="1.0" encoding="utf-8"?>
<s:Button xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 x="{region.x}" 
		 y="{region.y}" 
		 width="{region.width}" 
		 height="{region.height}" 
		 label="{region.name}" 
		 color="{labelColor}" 
		 alpha="0.33" 
		 chromeColor="{bgColor}">

	<fx:Script>
		<![CDATA[
			[Bindable]
			public var region:Region = new Region();
			[Bindable]
			public var bgColor:String = "0x000000";
			[Bindable]
			public var labelColor:String = "0xFFFFFF";
		]]>
	</fx:Script>
	
</s:Button>